    Combinator
    Compiler.LC

executable combinator-gmachine
  import:            shared-settings, shared-executable-settings
  main-is:           Main.hs
  hs-source-dirs:    executables/CombinatorGMachine
  other-modules:
    Machine
    Combinator
    Compiler.LC

executable krivine
  import:            shared-settings, shared-executable-settings
  main-is:           Main.hs
  hs-source-dirs:    executables/Krivine
  other-modules:
    Machine

executable turing-machine
  import:            shared-settings, shared-executable-settings
